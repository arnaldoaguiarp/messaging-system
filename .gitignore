# Ignore bundler config.
/backend/.bundle

# Ignore all environment files (except templates).
/.env*
!/.env*.erb

# Backend (Rails) specific ignores
# ===================================
#
# Logs, temporary files, and storage.
# The `*` ignores all files within, and the `!` rule keeps the empty directory.
/backend/log/*
!/backend/log/.keep
/backend/tmp/*
!/backend/tmp/.keep
/backend/storage/*
!/backend/storage/.keep

# Ignore database files.
/backend/db/*.sqlite3
/backend/db/*.sqlite3-journal

# Ignore master key for decrypting credentials and more.
/backend/config/master.key

# Ignore generated assets folder
/backend/public/assets

# Operating system files
.DS_Store
Thumbs.db

# Node.js dependencies (frontend)
/node_modules

# Frontend build files
/dist
.vercel

# RuboCop files
/backend/.rubocop-https---*

# Other
.byebug_history